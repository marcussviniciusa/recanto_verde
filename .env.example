# Configurações para o docker-compose.yml

# Docker Hub (username para suas imagens Docker)
DOCKER_USER=seu-usuario-dockerhub

# Domínio para o site
DOMAIN=recanto.seudominio.com

# Conexão com o MongoDB existente na VPS
# Ajuste conforme a configuração da sua instalação
MONGO_URI=mongodb://usuario:senha@endereco-do-mongodb:27017/recanto_verde?authSource=admin

# JWT (para autenticação)
JWT_SECRET=seu_jwt_secret_muito_seguro

# Email (opcional)
EMAIL_SERVICE=gmail
EMAIL_USER=seu-email@gmail.com
EMAIL_PASS=sua-senha-de-app
